# Generic make file for LaTeX: requires GNU make
#
# This makefile provides four targets: dvi, ps, pdf and clean.
# The default is "pdf".
# To make a dvi file, type "make dvi"
# To make a ps file, type "make ps".
# To make a pdf file, type "make pdf" or simply "make".
# To remove all files generated by make, type "make clean".
#
# Rouben Rostmaian <rostamian@umbc.edu>
# September 2002
#
# September 2005: Added the -o flag to dvips.  Thanks
# to Juan J. Merelo Guerv√≥s <jmerelo@geneura.ugr.es>

GREP=grep
PDFLATEX=pdflatex
PDFVIEWER=/cygdrive/c/Program\ Files/Adobe/Acrobat\ DC/Acrobat/Acrobat.exe
#PDFVIEWER=/cygdrive/c/Users/edwar/AppData/Local/SumatraPDF/SumatraPDF.exe

#TEXFILE	= slides.tex
TEXFILES	= $(wildcard *.tex)

.PHONY: default
default: ts

#.PHONY: aux dvi pdf ps clean view
.PHONY: pdf ps dvi ts clean distclean view

pdf:	$(TEXFILES:.tex=.pdf)
ps:	$(TEXFILES:.tex=.ps)
dvi:	$(TEXFILES:.tex=.dvi)
ts:	$(TEXFILES:.tex=.ts)

#%.dvi: %.tex
#	( \
#	latex $<; \
#	while grep -q "Rerun to get cross-references right." $(<:.tex=.log); \
#	do \
#		latex $<; \
#	done \
#	)

# For this to work, must have \usepackage[aux]{rerunfilecheck} in preamble
# of every .tex file; Beamer handles this already
%.pdf: %.tex ../common.tex
	( \
	$(PDFLATEX) $<; \
	while $(GREP) -q "rerunfilecheck Warning" $(<:.tex=.log); \
	do \
		$(PDFLATEX) $<; \
	done \
	)

%.ts: %.pdf
	cp $< ../PDFs/
	sleep 1
	touch $(<:.pdf=.ts)

#%.ps: %.dvi
#	dvips -q -t a4 $< -o $(<:.dvi=.ps)

#%.ps: %.dvi
#	dvips -q $< -o $(<:.dvi=.ps)

#%.pdf: %.ps
#	ps2pdf -dPDFSETTINGS=/prepress $<

clean:
	@rm -f \
	$(TEXFILES:.tex=.dvi) \
	$(TEXFILES:.tex=.pdf) \
	$(TEXFILES:.tex=.ps)  \
	$(TEXFILES:.tex=.ts)

distclean:
	@rm -f \
	$(TEXFILES:.tex=.aux) \
	$(TEXFILES:.tex=.dvi) \
	$(TEXFILES:.tex=.log) \
	$(TEXFILES:.tex=.nav) \
	$(TEXFILES:.tex=.out) \
	$(TEXFILES:.tex=.pdf) \
	$(TEXFILES:.tex=.ps)  \
	$(TEXFILES:.tex=.snm) \
	$(TEXFILES:.tex=.toc) \
	$(TEXFILES:.tex=.ts)

#view: $(TEXFILE:.tex=.ps)
#	gv -landscape $(TEXFILES:.tex=.ps) &

view: $(TEXFILES:.tex=.pdf)
	$(PDFVIEWER) & sleep 3
	$(foreach var,$(TEXFILES:.tex=.pdf), $(PDFVIEWER) $(var) & sleep 3 & )



